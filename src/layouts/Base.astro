---
import Navbar from '@components/astro/Navbar.astro';

const { title } = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Various particle effects as CSS animations"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href={`${baseUrl}favicon.ico`} />
        <title>{title ?? 'Particles'}</title>
    </head>
    <body>
        <Navbar />
        <slot />
    </body>
</html>

<style is:global>
    * {
        box-sizing: border-box;
    }

    html,
    body {
        margin: 0;
        padding: 0;
    }

    select,
    button,
    input[type='color'],
    input[type='range'],
    input[type='checkbox'],
    input[type='radio'] {
        cursor: pointer;
    }

    button {
        border-radius: 4px;
        padding: 5px 10px;
        user-select: none;
    }

    button,
    input[type='color'] {
        border: 0;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px,
            rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
    }

    .pointer {
        cursor: pointer;
    }
</style>
