---
import Base from "./Base.astro";

const { title } = Astro.props
---

<Base title={title}>
    <slot />
</Base>

<style is:global>
    button {
        border-radius: 4px;
        padding: 5px 10px;
    }

    button, input[type=color] {
        cursor: pointer;
        border: 0;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
    }

    input[type=checkbox], input[type=radio] {
        cursor: pointer;
    }

    .flexrow {
        display: flex;
        flex-direction: row;
        align-items: center;
        column-gap: 10px;
        margin-bottom: 6px;
    }
</style>
